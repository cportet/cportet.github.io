@using Microsoft.FluentUI.AspNetCore.Components.Icons.Regular;
@using MyHomePage.Code;

<FluentNavMenu Width=200>
    <div class="my-closemenu">
        <FluentIcon Value=@References.StandardIcons.Close
                    Title=@AppRessources.NavMenu_CloseMenu_Title
                    OnClick=@ItemClickedHandler />
    </div>
    <div class="my-items" @onclick=@ItemClickedHandler>
        <FluentNavLink Icon=@References.StandardIcons.Home
                       Match=NavLinkMatch.All
                       Href="/">
            @AppRessources.NavMenu_Page_Home
        </FluentNavLink>

        <FluentNavLink Icon=@References.StandardIcons.CV
                       Href="/resume">
            @AppRessources.NavMenu_Page_MonCV
        </FluentNavLink>

        <FluentNavLink Icon=@References.StandardIcons.Personnel
                       Href="/perso">
            @AppRessources.NavMenu_Page_Personnel
        </FluentNavLink>

        <FluentNavLink Icon=@References.StandardIcons.Applications
                       Href="/Applications">
            @AppRessources.NavMenu_Page_Applications
        </FluentNavLink>

        <FluentNavLink Icon=@References.StandardIcons.Options
                       Href="/options">
            @AppRessources.NavMenu_Page_Options
        </FluentNavLink>

        <FluentNavLink Icon=@References.StandardIcons.Info
                       Href="/apropos">
            @AppRessources.NavMenu_Page_Apropos
        </FluentNavLink>
        <FluentNavGroup Icon=@References.StandardIcons.Famille
                        Title=@AppRessources.NavMenu_Page_Famille>
            <FluentNavLink Icon=@References.StandardIcons.Lien
                           Target="_blank"
                           Href="https://remy.portet.org">
                Rémy
            </FluentNavLink>
            <FluentNavLink Icon=@References.StandardIcons.Lien
                           Target="_blank"
                           Href="https://trystan.portet.org">
                Trystan
            </FluentNavLink>
        </FluentNavGroup>
    </div>
    <div class="my-info">
        <span>@appConfig.VersionString</span>
    </div>
</FluentNavMenu>

