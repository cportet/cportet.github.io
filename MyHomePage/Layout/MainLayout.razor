@using Microsoft.FluentUI.AspNetCore.Components.Icons.Regular;
@using MyHomePage.Code;

@inherits LayoutComponentBase

<FluentDesignTheme @bind-Mode="@_mode"
                   @bind-OfficeColor="@_selectedOfficeColor"
                   StorageName="theme" />

<div class="my-page">
    <FluentLayout>
        <FluentHeader>
            <FluentIcon Value=@References.Icons.Menu
                        Title=@ToggleMenuTitle
                        OnClick=@ToggleMenu
                        Color=@Color.Fill />

            <MySpacer />

            <MyHeaderTitle Title="Cyril Portet" />

            <FluentSpacer />

            <HeaderMenu />

            <FluentIcon Value=@References.Icons.Theme
                        Title=@ToggleThemeTitle
                        OnClick=@ToggleTheme
                        Color=@Color.Fill />
        </FluentHeader>

        <FluentStack Orientation="Orientation.Horizontal"
                     Width="100%">
            @if (_menuVisible)
            {
                <div class="my-navmenu">
                    <NavMenu OnItemClick=@NavMenuOnItemClick />
                </div>
            }
            <FluentBodyContent>
                <div class="my-body">
                    @Body
                </div>
            </FluentBodyContent>
        </FluentStack>
    </FluentLayout>
</div>

<FluentToastProvider />
<FluentDialogProvider />
<FluentTooltipProvider />
<FluentMessageBarProvider />
<FluentMenuProvider />